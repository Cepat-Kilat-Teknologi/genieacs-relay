# GenieACS Relay Configuration
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env files with real credentials!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server listen address (optional, defaults to :8080)
# SERVER_ADDR=:8080

# GenieACS NBI server URL
GENIEACS_BASE_URL=http://localhost:7557

# NBI Authentication Key (REQUIRED - must be set for GenieACS API authentication)
NBI_AUTH_KEY=your-genieacs-nbi-key-here

# =============================================================================
# API AUTHENTICATION
# =============================================================================

# Enable API key authentication for incoming requests
# Set to "true" to require X-API-Key header for all /api/v1/genieacs/* endpoints
# Set to "false" to disable authentication (default)
MIDDLEWARE_AUTH=false

# API Key for incoming requests (REQUIRED if MIDDLEWARE_AUTH=true)
# This key must be provided in X-API-Key header when making API requests
# AUTH_KEY=your-secure-api-key-here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for Cross-Origin requests
# Use "*" to allow all origins (default)
# Or specify comma-separated list: "https://app.example.com,https://admin.example.com"
CORS_ALLOWED_ORIGINS=*

# CORS preflight cache duration in seconds (default: 86400 = 24 hours)
# CORS_MAX_AGE=86400

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per IP per window (default: 100)
# RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds (default: 60)
# RATE_LIMIT_WINDOW=60

# =============================================================================
# DEVICE VALIDATION
# =============================================================================

# Stale device threshold in minutes (default: 30)
# Devices that haven't reported within this time are considered "stale"
# Set to 0 to disable stale device validation
# STALE_THRESHOLD_MINUTES=30