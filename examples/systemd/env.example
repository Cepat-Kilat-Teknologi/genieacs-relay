# /etc/genieacs-relay/env
# Environment variables for GenieACS Relay
# Copy this file to /etc/genieacs-relay/env and adjust the values

# Server address
SERVER_ADDR=:8080

# GenieACS NBI URL
GENIEACS_BASE_URL=http://127.0.0.1:7557

# NBI Authentication (for requests to GenieACS)
NBI_AUTH=true
NBI_AUTH_KEY=your-nbi-auth-key-here

# Middleware Authentication (for incoming requests)
MIDDLEWARE_AUTH=false
AUTH_KEY=

# CORS
CORS_ALLOWED_ORIGINS=*

# Rate limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=30

# Stale device threshold (minutes)
STALE_THRESHOLD_MINUTES=15
